{
    "description": "Glyph 1: Tap caps_lock to toggle on/off, or use esc to turn off",
    "manipulators": [
        {
            "conditions": [
                {
                    "name": "glyph_mode",
                    "type": "variable_unless",
                    "value": 1
                }
            ],
            "description": "Caps Lock taps: toggle glyph mode on/off",
            "from": { "key_code": "caps_lock" },
            "to": [
                {
                    "set_variable": {
                        "name": "glyph_mode",
                        "value": 1
                    }
                },
                {
                    "set_notification_message": {
                        "id": "glyph_mode_notification",
                        "text": "Glyph Mode ON"
                    }
                }
            ],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "glyph_mode",
                    "type": "variable_if",
                    "value": 1
                }
            ],
            "description": "Caps Lock when active: turn off glyph mode",
            "from": { "key_code": "caps_lock" },
            "to": [
                {
                    "set_variable": {
                        "name": "glyph_mode",
                        "value": 0
                    }
                },
                {
                    "set_notification_message": {
                        "id": "glyph_mode_notification",
                        "text": ""
                    }
                }
            ],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "glyph_mode",
                    "type": "variable_if",
                    "value": 1
                }
            ],
            "description": "Escape: turn off glyph mode",
            "from": { "key_code": "escape" },
            "to": [
                {
                    "set_variable": {
                        "name": "glyph_mode",
                        "value": 0
                    }
                },
                {
                    "set_notification_message": {
                        "id": "glyph_mode_notification",
                        "text": ""
                    }
                }
            ],
            "type": "basic"
        }
    ]
}
